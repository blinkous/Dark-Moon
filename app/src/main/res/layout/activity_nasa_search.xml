<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/apod_constraint_layout"
    tools:context=".NasaSearchActivity">

    <EditText
        android:id="@+id/media_search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/search_nasa_media_library"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/lato_reg"
        android:padding="16dp"
        />

    <Button
        android:id="@+id/media_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:text="Search"
        android:onClick="onSearchButtonTap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/media_search_text"
        android:fontFamily="@font/lato_reg"
        android:background="@drawable/my_button"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorPrimary"
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom_navigation"
        android:background="@color/colorPrimary"
        app:itemTextColor="@drawable/bottom_nav_colors"
        app:itemIconTint="@drawable/bottom_nav_colors"
        android:fontFamily="@font/lato_reg"
        >

    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>