<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    card_view:cardUseCompatPadding="true"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/media_result_imageView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintHorizontal_weight="1"
            card_view:layout_constraintHorizontal_chainStyle="spread_inside"
            />

        <TextView
            android:id="@+id/media_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:textColor="@color/darkGrey"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintLeft_toRightOf="@id/media_result_imageView"
            card_view:layout_constraintHorizontal_weight="3"
            card_view:layout_constraintHorizontal_chainStyle="spread_inside"

            />
        <TextView
            android:id="@+id/media_result_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:textColor="@color/grey"
            card_view:layout_constraintTop_toBottomOf="@id/media_title"
            card_view:layout_constraintLeft_toRightOf="@id/media_result_imageView"
            card_view:layout_constraintHorizontal_weight="3"
            card_view:layout_constraintHorizontal_chainStyle="spread_inside"


            />

    </android.support.constraint.ConstraintLayout>

